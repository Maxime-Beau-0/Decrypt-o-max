{
  "name": "CryptoTracker",
  "description": "Track any coin or address on the fly!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["activeTab", "declarativeContent", "storage"],
  "host_permissions": ["https://api.coingecko.com/api/v3/*"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["coins/coinMarker.css"],
      "js": ["utils/storage.js", "utils/fetch.js", "utils/regexp.js", "coins/coinMarker.js"],
      "run_at": "document_end"
    }
  ],

  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}
