{
  "name": "CryptoTracker",
  "description": "Track any coin or address on the fly!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["activeTab", "declarativeContent", "storage"],
  "host_permissions": ["https://api.coingecko.com/api/v3/*"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["libs/boundary/boundary.css", "symbols/container.css", "symbols/symbols.css"],
      "js": [
        "libs/boundary/jquery.js",
        "libs/boundary/boundary.js",
        "utils/format.js",
        "utils/node.js",
        "utils/storage.js",
        "utils/fetch.js",
        "utils/regexp.js",
        "symbols/symbols.js"
      ],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "images/coingecko_logo.png",
        "images/splash.jpg",
        "libs/boundary/boundary-extra.css",
        "symbols/popup.css",
        "symbols/popup.html"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],

  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}
